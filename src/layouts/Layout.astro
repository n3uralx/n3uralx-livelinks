---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import "@fontsource-variable/oswald";
import OgImage from "../images/ogimage.jpg";
import { ClientRouter } from "astro:transitions";
const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `${title} | N3urlaX` : "N3urlaX | Live Links"}</title>
    <meta
      name="description"
      content="N3uralX is a dynamic tech community at KMEA College of Arts and Science, dedicated to empowering students in cybersecurity, AI/ML, software development, IoT, and graphic design."
    />
    <meta property="og:title" content={title ? `${title} | N3urlaX` : "N3urlaX | Live Links"} />
    <meta
      property="og:description"
      content={description
        ? description
        : "N3uralX is a dynamic tech community at KMEA College of Arts and Science, dedicated to empowering students in cybersecurity, AI/ML, software development, IoT, and graphic design."}
    />
    <meta property="og:site_name" content="N3urlaX: Live Links" />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={OgImage.src} />
    <ClientRouter />
  </head>
  <body class="min-h-screen flex flex-col bg-black-950">
    <Navbar />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    scrollbar-color: auto;
  }
</style>
